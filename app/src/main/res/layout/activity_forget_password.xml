<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/white">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:src="@drawable/bg_fp">

        </ImageView>
        <TextView
            android:id="@+id/otp_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lấy lại mật khẩu"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/otp_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhập email và số điện thoại để lấy lại mật khẩu"
            android:textSize="18sp"
            android:gravity="center"
            android:fontFamily="serif"
            android:layout_marginBottom="24dp"
            android:textColor="@color/black"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField"
            android:layout_gravity="center"
            android:layout_width="250dp"
            app:hintTextColor="@color/black"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/mail_icon"
            android:hint="Email">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textField1"
            android:layout_gravity="center"
            android:layout_width="250dp"
            app:hintTextColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            app:endIconMode="clear_text"
            app:startIconDrawable="@drawable/telephone_icon"
            android:hint="Số điện thoại">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                />

        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitOTP"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:text="Xác nhận"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/primaryColor"/>
    </LinearLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>